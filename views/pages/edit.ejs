<% layout ('layouts/base.ejs') -%>

<h3>Edit <%= listing.title %></h3>
<!-- Create New list -->
<form action="/detail/<%= listing.id %>?_method=PUT" method="post">

  <div class="title">
    <label for="title">Title</label><br>
    <input type="text" name="title" value="<%= listing.title %>" required><br />
  </div>

  <div class="discription">
    <label for="description">description</label><br>
    <input type="text" name="description" value="<%= listing.description %>" required><br />
  </div>

  <div class="images">
    <label for="images">Image link</label><br>
    <input type="text" name="images" value=<%= listing.images %> required><br />
  </div>

  <div class="price">
    <label for="price">Price</label><br>
    <input type="number" name="price" value=<%= listing.price %> required><br />
  </div>

  <div class="location">
    <label for="location">Location</label><br>
    <input type="text" name="location" value='<%= listing.location %>' required><br />
  </div>

  <div class="country">
    <label for="country">Country</label><br>
    <input type="text" name="country" value=<%= listing.country %> required><br />
  </div>

  <button type="submit"> Done </button>
</form><br />