<% if (success.length > 0) { %>
<div class="mt-2 alert alert-success alert-dismissible fade show col-6 offset-3 d-flex justify-content-between align-items-center" role="alert">
  <span><%= success[0] %></span>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if (error.length > 0) { %>
<div class="mt-3 alert alert-danger alert-dismissible fade show col-6 offset-3 d-flex justify-content-between align-items-center" role="alert">
  <span><%= error[0] %></span>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>